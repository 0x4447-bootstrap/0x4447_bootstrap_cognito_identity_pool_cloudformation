{
	"CognitoIdentityPoolPolicyS3ProfilePhoto": {
		"Type": "AWS::IAM::Policy",
		"Properties": {
			"PolicyName": "s3_profile_photo",
			"Roles": [
				{ "Ref": "CognitoIDPAuthenticatedRole" }
			],
			"PolicyDocument": {
				"Version": "2012-10-17",
				"Statement": [
					{
						"Effect": "Allow",
						"Action": [
							"s3:PutObject",
							"s3:GetObject",
							"s3:PutObjectAcl",
							"s3:GetObjectAcl"
						],
						"Resource": [
							{ "Fn::Sub": "arn:aws:s3:::profile-photo/*" }
						]
					}
				]
			}
		}
	}
}
